#oy-page
  #oy-topic Table Of Contents
  #oy-index-pages
    %ul
      - @pages.each do |page|
        %li
          %span.title= page.html_link
          - if page.pages
            %span.count= "(#{page.pages.size})"
          - subpages = @subpages[page.path]
          - if subpages and subpages.size > 0
            %ul.sub
              - subpages.each do |sp|
                %li= sp.html_link
