#oy-media-ls
  %h1= "Image <strong>#{@img.identifier}</strong>"
  -if @perma_link_value
    .oy-backlink
      %a{:href => @img.permalink} Back last recent Version
  %p= "<em>Size</em> <code>#{@size}</code> Bytes"
  .image_box
    %img{:src => @img.media_url(@perma_link_value)}
  .oy-msg
    Commit Message:
    %em
      =@img.message
  %hr
    %p
      Identifier
      %input{:type => :text, :class => :img_ident, :value => @img.media_identifier}
  %hr    
    - if @img.has_parent?
      %h2 History
      %ul
        - @img.history.each do |himg|
          %li.no-force
            .oy-date= himg.date
            .lala
              %a{:href => himg.permalink(true)}= himg.ref

